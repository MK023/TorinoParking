# ============================================================
# TorinoParking - Environment Variables
# ============================================================
# OPZIONE CONSIGLIATA: usa Doppler per gestire i secrets
#   doppler login && doppler setup
#   doppler run -- docker compose up -d
#
# ALTERNATIVA: copia questo file in .env e configura i valori
#   cp .env.example .env
# ============================================================

APP_NAME="Parking Torino API"
VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_API_KEY=<generate-with-openssl-rand-base64-32>

DATABASE_URL=postgresql+asyncpg://parking:<your-db-password>@postgres:5432/parking
POSTGRES_USER=parking
POSTGRES_PASSWORD=<your-db-password>
POSTGRES_DB=parking

REDIS_URL=redis://redis:6379/0

FIVE_T_API_URL=https://opendata.5t.torino.it/get_pk
FIVE_T_TIMEOUT=10

CACHE_TTL=120

RATE_LIMIT_ANONYMOUS=20
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_PREMIUM=1000

CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

HMAC_SALT=<your-hmac-salt-here>

SENTRY_DSN=

LOG_LEVEL=INFO
SNAPSHOT_RETENTION_DAYS=30

# === Frontend (Vite) ===
VITE_MAPBOX_TOKEN=<your-mapbox-public-token>
